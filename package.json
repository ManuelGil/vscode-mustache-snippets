{
  "name": "vscode-mustache-snippets",
  "displayName": "Mustache Templates - Syntax Highlighting, Snippets & Autocomplete",
  "description": "Advanced Mustache template engine support for VS Code: fast syntax highlighting, intelligent code completion, customizable snippets, file generation commands and easy delimiter switching for Mustache (.mustache) files.",
  "version": "2.8.0",
  "icon": "icon.png",
  "license": "MIT",
  "publisher": "imgildev",
  "author": {
    "name": "Manuel Gil",
    "url": "https://github.com/ManuelGil"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/manuelgil"
  },
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Formatters",
    "Linters",
    "Other"
  ],
  "keywords": [
    "auto generate",
    "autocomplete",
    "code completion",
    "code snippets",
    "delimiter switching",
    "developer tools",
    "editor support",
    "file generator",
    "handlebars",
    "html",
    "javascript",
    "js",
    "mustache snippet",
    "mustache snippets",
    "mustache templates",
    "mustache templating",
    "mustache-snippets",
    "mustache",
    "mustachejs",
    "mvc",
    "php",
    "productivity",
    "react",
    "reactjs",
    "snippet",
    "snippets",
    "svelte",
    "sveltejs",
    "syntax highlighting",
    "syntax-highlighting",
    "template engine",
    "template language",
    "template",
    "templating",
    "vs code",
    "vscode extension",
    "vscode plugin",
    "vscode-extension",
    "vscode"
  ],
  "homepage": "https://github.com/ManuelGil/vscode-mustache-snippets",
  "repository": {
    "type": "git",
    "url": "https://github.com/ManuelGil/vscode-mustache-snippets"
  },
  "bugs": {
    "url": "https://github.com/ManuelGil/vscode-mustache-snippets/issues"
  },
  "activationEvents": [
    "*"
  ],
  "main": "./extension.js",
  "l10n": "./l10n",
  "contributes": {
    "configuration": {
      "id": "Mustache",
      "title": "Mustache Template Engine",
      "properties": {
        "mustache.delimiters": {
          "type": "object",
          "default": {
            "left": "{{",
            "right": "}}"
          },
          "description": "%mustache.delimiters%"
        }
      }
    },
    "languages": [
      {
        "id": "mustache",
        "aliases": [
          "Mustache (HTML)",
          "mustache"
        ],
        "extensions": [
          ".mst",
          ".mu",
          ".mustache",
          ".stache",
          ".tmpl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mustache",
        "scopeName": "source.mustache",
        "path": "./syntaxes/mustache.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "path": "./snippets/mustache.code-snippets"
      },
      {
        "path": "./snippets/html.code-snippets"
      }
    ],
    "commands": [
      {
        "command": "mustache.new.file",
        "title": "%mustache.new.file%",
        "category": "Mustache"
      },
      {
        "command": "mustache.change.delimiters",
        "title": "%mustache.change.delimiters%",
        "category": "Mustache"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "mustache.new.file",
          "group": "2_workspace",
          "when": "explorerViewletFocus && explorerResourceIsFolder"
        }
      ],
      "editor/context": [
        {
          "command": "mustache.change.delimiters",
          "group": "1_modification",
          "when": "editorHasSelection"
        }
      ]
    },
    "jsonValidation": [
      {
        "fileMatch": ".vscode/settings.json",
        "url": "./schemas/config.schema.json"
      }
    ]
  },
  "scripts": {
    "format": "biome format --write ./",
    "lint": "biome lint --write ./",
    "lint:check": "biome check --write ./",
    "pretest": "npm run lint",
    "test": "vscode-test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@types/glob": "^9.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.0.15",
    "@types/vscode": "^1.88.0",
    "@vscode/l10n-dev": "^0.0.35",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "mocha": "^11.7.1",
    "typescript": "^5.8.3",
    "vscode-test": "^1.6.1"
  },
  "lint-staged": {
    "*.(js)": "npm run lint"
  }
}
