{
    "block": {
        "prefix": [
            "block",
            "{{$"
        ],
        "body": [
            "{{$ ${name} }}",
            "\t$1",
            "{{/ ${name} }}"
        ],
        "description": "When a template uses inheritance and if you want to print a block multiple times, use the block function"
    },
    "section": {
        "prefix": [
            "section",
            "{{#"
        ],
        "body": [
            "{{# ${name} }}",
            "\t$1",
            "{{/ ${name} }}"
        ],
        "description": "When a template uses inheritance and if you want to print a block multiple times, use the block function"
    },
    "inverted section": {
        "prefix": [
            "inverted section",
            "{{^"
        ],
        "body": [
            "{{^ ${condition} }}",
            "\t$2",
            "{{/ ${condition} }}"
        ],
        "description": "The if statement in Mustache is comparable with the if statements of PHP"
    },
    "comment": {
        "prefix": [
            "comment",
            "{{!"
        ],
        "body": "{{! $1 }}",
        "description": "{{! }}"
    },
    "include": {
        "prefix": [
            "include",
            "{{>"
        ],
        "body": "{{> ${filename} }}",
        "description": "The include statement includes a template and returns the rendered content of that file into the current namespace"
    },
    "extends": {
        "prefix": [
            "extends",
            "{{<"
        ],
        "body": "{{< ${filename} }}",
        "description": "Mustache snippets"
    },
    "loop": {
        "prefix": "loop",
        "body": [
            "{{# ${array} }}",
            "\t{{ . }}",
            "{{/ ${array} }}"
        ],
        "description": "Loop over each item in a sequence"
    },
    "layout": {
        "prefix": "layout",
        "body": [
            "{{% BLOCKS }}",
            "{{! layout.mustache }}",
            "<!DOCTYPE html>",
            "<html lang=\"en\">",
            "<html>",
            "\t<head>",
            "\t\t<meta charset=\"UTF-8\">",
            "\t\t<meta http-equiv=\"X-UA-Compatible\" content=\"IE=edge\">",
            "\t\t<meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">",
            "\t\t<title>{{$ title }}My Awesome Site{{/ title }}</title>",
            "\t\t{{$ stylesheets }}",
            "\t\t\t<link rel=\"stylesheet\" href=\"/assets/css/default.css\">",
            "\t\t{{/ stylesheets }}",
            "\t</head>",
            "\t\t<header>",
            "\t\t\t{{$ header }}",
            "\t\t\t\t<h1>Welcome to My Awesome Site</h1>",
            "\t\t\t{{/ header }}",
            "\t\t</header>",
            "\t\t<div id=\"content\">",
            "\t\t\t{{$ content }}",
            "\t\t\t\t<p>Hello, World!</p>",
            "\t\t\t{{/ content }}",
            "\t\t</div>",
            "\t\t{{$ scripts }}",
            "\t\t\t<script src=\"/assets/js/default.js\"></script>",
            "\t\t{{/ scripts }}",
            "\t</body>",
            "</html>"
        ],
        "description": "Mustache snippets"
    }
}